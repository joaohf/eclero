{alias, [
    {check, [xref,
             {eunit, "-c"},
             {ct, "-c"},
             {cover, "-v --min_coverage=80"}]}
]}.

{erl_opts, [debug_info]}.
{deps, [
        {aten, "0.5.2"},
        {cowboy, "2.7.0"},
        {epmdless, {git, "https://github.com/tsloughter/epmdless", {branch, "master"}}}
]}.

{dist_node, [
        {setcookie, 'eclero'},
        {sname, 'eclero0'}
]}.

{relx, [{release, {eclero, "0.1.0"},
         [eclero,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true},
        {generate_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_src, false},
                            {extended_start_script, false},
                            {generate_start_script, true}]}]},
            {test, [{plugins, [coveralls]}]},
            {lint, [{plugins, [{rebar3_lint, {git, "https://github.com/project-fifo/rebar3_lint.git", {tag, "v0.1.10"}}}]}
                   ]}
           ]
}.

{xref_checks, [undefined_function_calls,
               undefined_functions,
               locals_not_used,
               % exports_not_used,
               deprecated_function_calls,
               deprecated_functions]}.

{cover_enabled, true}.
{cover_export_enabled, true}.
{coveralls_coverdata, "_build/test/cover/*.coverdata"}.
{coveralls_service_name, "travis-ci"}.
